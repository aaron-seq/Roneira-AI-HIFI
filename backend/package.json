{
  "name": "roneira-financial-intelligence-backend",
  "version": "2.0.0",
  "description": "Enhanced Backend API for Roneira Financial Intelligence Platform - AI-driven stock predictions and portfolio management",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "build": "npm run lint && npm run test",
    "validate": "npm run lint && npm run test && npm audit"
  },
  "keywords": [
    "financial-intelligence",
    "stock-prediction",
    "portfolio-management",
    "machine-learning",
    "fintech",
    "investment-analysis",
    "REST-API",
    "express",
    "nodejs"
  ],
  "author": "Aaron Sequeira <aaronsequeira12@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aaron-seq/Roneira-AI-HIFI.git"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.4.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-validator": "^7.2.0",
    "joi": "^17.13.3",
    "winston": "^3.14.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "node-cache": "^5.1.2",
    "uuid": "^10.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.3.3",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "js,json",
    "ignore": ["src/**/*.test.js"],
    "delay": 1000
  }
}