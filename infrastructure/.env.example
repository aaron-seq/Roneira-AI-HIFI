# Roneira AI HIFI - Infrastructure Environment Variables
# Copy this file to .env and configure for your environment

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
POSTGRES_DB=roneira_hifi
POSTGRES_USER=roneira
POSTGRES_PASSWORD=your_secure_password_here

# Database URL for application connections
DATABASE_URL=postgresql://roneira:your_secure_password_here@db:5432/roneira_hifi

# =====================================================
# REDIS CONFIGURATION
# =====================================================
REDIS_URL=redis://cache:6379
REDIS_PASSWORD=

# Task queue Redis (separate instance for job isolation)
TASK_QUEUE_URL=redis://task-queue:6379

# =====================================================
# EXTERNAL API KEYS
# =====================================================
# Alpha Vantage for stock data (get free key at alphavantage.co)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Hugging Face for sentiment analysis
HUGGING_FACE_API_KEY=your_hugging_face_key_here

# =====================================================
# SERVICE URLS (Internal Docker network)
# =====================================================
ML_SERVICE_URL=http://ml-service:8000
BACKEND_URL=http://backend:3001

# =====================================================
# APPLICATION SETTINGS
# =====================================================
NODE_ENV=development
FLASK_ENV=development

# CORS origins (comma-separated for multiple)
CORS_ORIGIN=http://localhost,http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# TRAEFIK CONFIGURATION
# =====================================================
TRAEFIK_DASHBOARD_PORT=8080
